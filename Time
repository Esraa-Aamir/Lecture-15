#include <iostream>
using namespace std;
string greetings(int time)
{
	if (time < 12)
	{
		return "Good Morning";
	}
	else if (time <= 17)
	{
		return "Good after noon";
	}
	else if (time <= 20)
	{
		return "Good evening";
	}
	else if (time <= 24)
	{
		return "good night";
	}
}
	int main()
	{
		cout << "What time is it?" << endl;
		int x;
		cin >> x;
		while (cin.fail())
		{
			cout << "Invalid Input \n Please enter a valid time" << endl;
		}
	}
